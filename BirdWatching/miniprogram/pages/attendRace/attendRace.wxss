/* 白色区域 */
.Box{
  width: 100%;
  height: 1000rpx;
  background-color: #fff;
}
.Box .swiperBox{
  width: 100%;
  height: 450rpx;
}
.Box .swiperBox swiper{
  width: 100%;
  height: 450rpx;
}
.Box .swiperBox swiper swiper-item image{
  width: 100%;
  height: 100%;
}
.messageBox{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}
.messageBox .mainName{
  margin-left: 80rpx;
  font-weight: bolder;
}
.messageBox .jubandanwei{
  margin-top: 5rpx;
  margin-left: 80rpx;
  font-size: 30rpx;
}
.jieshaoBox{
  display: flex;
  flex-direction: column;
  width: 700rpx;
  height: 400rpx;
  margin: 10rpx 28rpx;
  box-shadow: 1px 1px 5px 1px rgba(143, 143, 143, 0.5);
  /* border-style: solid;
  border-color: gray; */
}

.jieshaoBox text{
  margin-left: 60rpx;
  margin-top: 20rpx;
  font-size: 35rpx;
}

/* 灰色部分 */
.waitBox{
  width: 100%;
  height: 400rpx;
  background-color: #fbfbf9;
  display: flex;
  flex-direction: column;
}
.graytop{
  width: 100%;
  height: 250rpx;
  background-color: #fbfbf9;
  display: flex;
  flex-direction: column;
}
.word{
  margin-top: 20rpx;
  margin-left: 40rpx;
  font-size: 35rpx;
}
.graybotton{
  display: flex;
}
.graybotton .left{
  margin-left: 100rpx;
  margin-right: 80rpx;
}
.graybotton .right{
  margin-right: 40rpx;
}
.graybotton .leave{
  margin-left: 40rpx;
}

.buttoniconone{
  margin-right: 90rpx;
  border-radius: 40%;
  background-color: #f1f1ef;
}
.buttonicontwo{
  margin-left: 90rpx;
  border-radius: 40%;
  background-color: #f1f1ef;
}
.numberBox{
  display: flex;
  justify-content: space-between;
  width: 650rpx;
  height: 40rpx;
  margin-top: 20rpx;
  border-bottom: solid #c4c4c4 1rpx;
  padding-bottom: 35rpx;
  margin-left: 40rpx;
}
.numberBox-item{
  width: 400rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
}
.numberBox .mainName{
  color: #363533;
  font-weight: bolder;
}
.numbertext{
  margin-top: 10rpx;
}
.creatmessage{
  margin-top: 40rpx;
  height: 50rpx;
}
.rightmessage{
  height: 50rpx;
  margin-top: 40rpx;
}