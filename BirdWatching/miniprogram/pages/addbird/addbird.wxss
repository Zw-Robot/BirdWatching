/* pages/storehouse/storehouse.wxss */
page{
  /* display: flex; */
  background-color: #fbfbf9;
  justify-content: center;
  height: 100%;
}
.searchbox{
  box-shadow: 1px 1px 5px 1px rgba(241, 239, 239, 0.5);
  background-color: #FFFFFF;
  margin: 60rpx 60rpx 60rpx 60rpx;
  display: flex;
  flex-direction: row;
  border: 2px solid black;
  border-radius: 35rpx;
  width: 600rpx;
  height: 80rpx;
  align-items: center;
}
input{
  margin-left: 24rpx;
  width: 100%;
  font-size: 40rpx;
}

/* 目录区域 */
.menu{
  display: grid;
  margin-left: 32rpx;
  grid-template-columns: 649rpx 1fr;
  gap: 18rpx;
}
.menu-list{
  height: 898rpx;
}

/* 鸟库*/
.cates .cates_container{
  display: flex;
  height:898rpx;
}
.cates .cates_container .right_menu{
  flex: 1;
}
.cates .cates_container .left_menu{
  flex: 6;
}
/* 左侧*/
.header{
  margin: 40rpx 0rpx 40rpx 40rpx;
  font-weight:lighter;
  font-size: 30rpx;
}
.list{
  /* margin-left: 10rpx; */
  display: flex;
  flex-wrap: wrap;
}
.list .list-item{
  display: flex;
  flex-direction: column;
  margin: 20rpx 20rpx 10rpx 10rpx;
  background-color: #efefe7;
  width: 600rpx;
  height: 200rpx;
  border-radius: 5%;
  box-shadow: 1px 1px 5px 1px rgba(241, 239, 239, 0.5);
}
.birdName{
  margin: 30rpx 0rpx 0rpx 40rpx;
  font-weight: bolder;
}
.lading{
  margin: 30rpx 40rpx 10rpx 40rpx;
  font-style: italic;
  font-weight: lighter;
  font-size: 30rpx;
}
.english{
  margin: 0rpx 40rpx 15rpx 40rpx;
  font-weight: lighter;
  font-size: 30rpx;
}
.subject{
  margin: 0rpx 40rpx 20rpx 40rpx;
  font-weight: lighter;
  font-size: 30rpx;
}
/* 右侧 */
.right_menu{
  margin-top: 50rpx;
}
.menu_item{
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  font-weight: lighter;
}
.right_menu .active{
  font-weight: bold;
  font-size: 16px;
}

checkbox{
  margin: 0rpx 5rpx 0rpx 10rpx;
}