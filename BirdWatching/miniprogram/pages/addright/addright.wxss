/* 灰色顶部 */
.hd{
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  background: #fbfbf9;
  box-shadow: 0 5rpx 5rpx #ccc;
  position: relative;
}
.hd-item{
  flex: 1;
  text-align: center;
  font-weight:500;
  color: #333;
  font-size: 28rpx;
  position: relative;
}
.hd-item::after{
  content:'';
  position: absolute;
  width: 0%;
  height: 6rpx;
  background: linear-gradient(to right,#bbbbbb,#6b6b6b);
  border-radius: 3rpx;
  left:50%;
  transform:translate(-50%);
  bottom: 4rpx;
  /* 添加过渡效果 */
  transition: 0.3s width linear;
}
/* 激活选中样式 */
.hd-item.active{
  font-size: 30rpx;
  background-clip: text;
  -webkit-background-clip: text;
  color:transparent;
  background-image: linear-gradient(to right,#7a7a7a,#494949);
  transform: 0.3s all linear;
  transition-delay:0.1s;
}
.hd-item.active::after{
  width: 40rpx;
}

