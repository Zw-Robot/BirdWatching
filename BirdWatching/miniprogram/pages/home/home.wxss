/* pages/home/home.wxss */
page{
  background-color: 	#fbfbf9;
}
/* 轮播图区域 */
.imageBox{
  display: flex;
  flex-direction: column;
  margin: 40rpx 40rpx 30rpx 40rpx;
  height: 600rpx;
  border-radius: 5%;
  background-color: #FFFFFF;
  box-shadow: 1px 1px 5px 1px rgba(241, 239, 239, 0.5);
}
.swiperBox{
width: 100%;
margin: 0rpx 0rpx 40rpx 0rpx;
}
swiper{
  height: 450rpx;
}
swiper image{
  width: 100%;
  height: 100%;
}
.times{
  margin: 0rpx 0rpx 0rpx 40rpx;
  font-weight:bolder;
  font-size:60rpx;
} 

/* 添加记录区域 */
.addBox{
  display: flex;
}
.add{
  margin: 20rpx 10rpx 0rpx 40rpx;
  width: 400rpx;
  height: 350rpx;
  border-radius: 10%;
  background-color: #FFFFFF;
  box-shadow: 1px 1px 5px 1px rgba(241, 239, 239, 0.5);
  display: flex;
  flex-direction: column;
}
.add image{
  margin: 40rpx 40rpx 0rpx 40rpx;
  width: 100rpx;
  height: 100rpx;
}
.add .mainmessage{
  font-weight:bolder;
  margin: 40rpx 40rpx 0rpx 40rpx;
}
.add .message{
  font-size:30rpx;
  font-weight:lighter;
  margin: 20rpx 40rpx;
}
.add-right{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-left: 20rpx;
  width: 250rpx;
  height: 350rpx;
  border-radius: 10%;
  background-color: #FFFFFF;
  box-shadow: 1px 1px 5px 1px rgba(241, 239, 239, 0.5);
}
.add-right .niaoleidiaocha{
  margin-left: 20rpx;
  margin-top: 150rpx;
  font-size: 45rpx;
  font-weight: bolder;
}
.messageitem{
  font-size: 30rpx;
  font-weight:lighter;
  margin: 20rpx 20rpx;
}